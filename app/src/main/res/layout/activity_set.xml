<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:id="@+id/con_one"
        android:background="#F4F8F8"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:text="关于我们"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textSize="30dp"
            android:layout_height="50dp"/>
        <ImageView
            android:layout_width="50dp"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/img_left_one"
            android:src="@drawable/left"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_height="50dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:background="#F4F8F8"
        android:orientation="horizontal"
        android:id="@+id/con_two"
        app:layout_constraintTop_toBottomOf="@+id/con_one"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:text="清除缓存"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:textSize="30dp"
            android:layout_height="50dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:text="1.2G"
            app:layout_constraintTop_toTopOf="parent"
            android:textSize="26dp"
            app:layout_constraintRight_toLeftOf="@+id/img_left_two"
            android:layout_height="50dp"/>
        <ImageView
            android:layout_width="50dp"
            android:id="@+id/img_left_two"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/left"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_height="50dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:background="#F4F8F8"
        android:id="@+id/con_three"
        app:layout_constraintTop_toBottomOf="@+id/con_two"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:text="意见反馈"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textSize="30dp"
            android:layout_height="50dp"/>
        <ImageView
            android:layout_width="50dp"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/img_left_three"
            android:src="@drawable/left"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_height="50dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:background="#F4F8F8"
        android:orientation="horizontal"
        android:id="@+id/con_four"
        app:layout_constraintTop_toBottomOf="@+id/con_three"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:text="退出登录"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textSize="30dp"
            android:layout_height="50dp"/>
        <ImageView
            android:layout_width="50dp"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/img_left_four"
            android:src="@drawable/left"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_height="50dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>