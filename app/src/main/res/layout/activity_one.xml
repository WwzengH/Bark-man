<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/dp_30"
    tools:context=".ui.OneActivity">

    <TextView
        android:id="@+id/one_tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="验证码登录"
        android:textColor="#e0e0e0"
        android:textSize="@dimen/dp_25"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/one_view"
        android:layout_width="@dimen/dp_1"
        android:layout_height="@dimen/dp_35"
        android:layout_marginLeft="@dimen/dp_20"
        android:background="#000000"
        app:layout_constraintLeft_toRightOf="@id/one_tv1"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/one_tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_20"
        android:text="密码登录"
        android:textSize="@dimen/dp_25"
        android:textColor="#000000"
        app:layout_constraintLeft_toRightOf="@id/one_view"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/one_et1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_100"
        android:hint="请输入手机号"
        app:layout_constraintTop_toBottomOf="@id/one_tv1" />

    <EditText
        android:id="@+id/one_et2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="请输入密码"
        app:layout_constraintTop_toBottomOf="@id/one_et1" />

    <Button
        android:id="@+id/onr_bt1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_100"
        android:background="#FF5722"
        android:text="登录"
        app:layout_constraintTop_toBottomOf="@id/one_et2" />


    <CheckBox
        android:id="@+id/one_cb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/dp_8"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>