                android:layout_height="wrap_content"
                app:layout_constraintLeft_toRightOf="@id/no_text1"
                app:layout_constraintTop_toTopOf="@id/no_text1"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="15dp"
                android:text="元"
                android:textColor="#fff"
                android:id="@+id/no_text2"
