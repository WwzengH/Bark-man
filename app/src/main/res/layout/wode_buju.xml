<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardCornerRadius="10dp"
    app:cardElevation="20dp"
    app:cardUseCompatPadding="true"
    android:layout_gravity="center"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <ImageView
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:background="@mipmap/wode_aaa"
            android:layout_marginTop="20dp"
            android:id="@+id/wode_buju_img1"
            android:layout_marginLeft="20dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@id/wode_buju_img1"
            android:layout_marginTop="30dp"
            android:textSize="30dp"
            android:textColor="@color/black"
            android:text="节奏练习1"
            android:id="@+id/wode_buju_text1"
            />
        <ImageView
            android:layout_width="90dp"
            android:layout_height="30dp"
            app:layout_constraintTop_toBottomOf="@id/wode_buju_text1"
            app:layout_constraintLeft_toRightOf="@id/wode_buju_img1"
            android:background="@mipmap/wode_bbb"
            android:layout_marginLeft="20dp"
            />
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="20dp"
            android:background="@mipmap/wode_ddd"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="20dp"
            />
        <ImageView
            android:layout_width="90dp"
            android:layout_height="15dp"
            android:background="@mipmap/wode_ccc"
            app:layout_constraintTop_toBottomOf="@id/wode_buju_img1"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:id="@+id/wode_buju_img2"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="9小时前"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/wode_buju_img1"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:id="@+id/wode_buju_text2"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="查看点评"
            app:layout_constraintTop_toBottomOf="@id/wode_buju_text2"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:background="@drawable/wode_an"
            android:textColor="#fff"
            android:layout_marginTop="20dp"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>