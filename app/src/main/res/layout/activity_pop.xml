<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <View
        android:layout_width="250dp"
        android:layout_height="200dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="#ECE6E6"
        android:layout_marginLeft="50dp"
        />
    <View
        android:layout_width="230dp"
        android:layout_height="180dp"
        android:background="#fff"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="10dp"
        />
    <ImageView
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:background="@mipmap/yijian_aaa"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="120dp"
        android:id="@+id/pop_img1"
        />
    <View
        android:layout_width="280dp"
        android:layout_height="120dp"
        app:layout_constraintTop_toBottomOf="@id/pop_img1"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="30dp"
        android:background="#F57C00"
        android:id="@+id/pop_view1"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/pop_view1"
        app:layout_constraintLeft_toLeftOf="@id/pop_view1"
        android:text="现在拨打电话？"
        android:textColor="#fff"
        android:textSize="25dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="10dp"
        android:id="@+id/pop_text1"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/pop_text1"
        app:layout_constraintLeft_toLeftOf="@id/pop_view1"
        android:background="@drawable/pop_btn"
        android:text="取消"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:textSize="15dp"
        android:id="@+id/pop_btn"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/pop_btn"
        app:layout_constraintTop_toBottomOf="@id/pop_text1"
        android:layout_marginLeft="20dp"
        android:background="#fff"
        android:text="立即拨打"
        android:textColor="#F57C00"
        android:layout_marginTop="10dp"
        android:textSize="15dp"
        />
</androidx.constraintlayout.widget.ConstraintLayout>