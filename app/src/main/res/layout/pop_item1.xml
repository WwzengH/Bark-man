<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_400"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@mipmap/e1">
    <ImageView
        android:id="@+id/iv_pop1_pic"
        android:layout_width="@dimen/dp_30"
        android:layout_height="@dimen/dp_30"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@mipmap/e2"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="@dimen/dp_50"
        android:layout_marginTop="@dimen/dp_10"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/dp_15"
        android:text="4"
        android:textColor="#FFFCFC"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="@dimen/dp_194"
        android:layout_marginLeft="@dimen/dp_205"
        />
    <Button
        android:id="@+id/bnt_pop1_ok"
        android:layout_width="@dimen/dp_170"
        android:layout_height="@dimen/dp_40"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="@dimen/dp_331"
        android:text="чбошод"
        android:textSize="@dimen/dp_15"
        android:textColor="#FF5722"
        android:background="@drawable/pop_shop1"
        />

</androidx.constraintlayout.widget.ConstraintLayout>