<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:id="@+id/linear_ll"
        android:layout_height="200dp"
        app:layout_constraintTop_toTopOf="parent"
        >
        <TextView
            android:layout_width="match_parent"
            android:id="@+id/tv_title"
            android:layout_marginTop="55dp"
            android:text="欢迎您的加入"
            android:textColor="#090909"
            android:textSize="40dp"
            android:layout_marginLeft="30dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:id="@+id/const_cl"
        app:layout_constraintTop_toBottomOf="@+id/linear_ll"
        android:layout_height="150dp">
        <TextView
            android:layout_width="match_parent"
            android:text="151****0410"
            android:layout_marginLeft="30dp"
            android:id="@+id/tv_phone"
            app:layout_constraintTop_toTopOf="parent"
            android:textColor="#090909"
            android:textSize="25dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="match_parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_phone"
            android:text="中国移动提供认证服务"
            android:layout_marginLeft="30dp"
            android:textSize="18dp"
            android:layout_height="wrap_content"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <LinearLayout
        android:layout_width="match_parent"
        app:layout_constraintTop_toBottomOf="@+id/const_cl"
        android:orientation="vertical"
        android:id="@+id/ll_linear"
        android:layout_height="wrap_content">
       <Button
           android:layout_width="match_parent"
           android:text="本机号码一键登录"
           android:layout_gravity="center"
           android:textColor="#FFFFFF"
           android:textSize="30dp"
           android:id="@+id/btn_login"
           android:layout_marginLeft="30dp"
           android:layout_marginRight="30dp"
           android:background="@drawable/selector_redio"
           android:layout_height="70dp"/>
       <LinearLayout
           android:layout_width="match_parent"
           android:orientation="horizontal"
           android:layout_marginTop="30dp"
           android:layout_height="wrap_content">
           <CheckBox
               android:layout_width="wrap_content"
               android:layout_marginLeft="30dp"
               android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="wrap_content"
                android:text="登录即代表同意"
                android:textSize="12dp"
                android:layout_height="wrap_content"/>
           <TextView
               android:layout_width="wrap_content"
               android:text="《中国移动认证服务条款》"
               android:textColor="#37CEFB"
               android:textSize="12dp"
               android:layout_height="wrap_content"/>
           <TextView
               android:layout_width="wrap_content"
               android:text="和"
               android:textSize="12dp"
               android:layout_height="wrap_content"/>
           <TextView
               android:id="@+id/tv_name"
               android:layout_width="wrap_content"
               android:text="《用户协议》"
               android:textColor="#37CEFB"
               android:textSize="12dp"
               android:layout_height="wrap_content"/>
       </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        app:layout_constraintTop_toBottomOf="@+id/ll_linear"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:text="-------------其他登录方式-------------"
            android:gravity="center"
            android:textSize="15dp"
            android:layout_marginTop="90dp"
            android:layout_height="wrap_content"/>
        <ImageView
            android:layout_width="wrap_content"
            android:src="@drawable/wx"
            android:id="@+id/wx_login"
            android:layout_marginTop="30dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>