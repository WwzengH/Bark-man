<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

  <androidx.cardview.widget.CardView
      android:layout_marginTop="30dp"
      android:layout_width="match_parent"
      android:layout_marginLeft="10dp"
      android:layout_marginRight="10dp"
      android:layout_height="wrap_content"
      app:cardElevation="10dp"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintLeft_toLeftOf="parent"
      app:cardCornerRadius="10dp"
      >
 <androidx.constraintlayout.widget.ConstraintLayout

     android:layout_width="match_parent"
     android:layout_height="200dp"
     >
     <TextView
         android:layout_marginTop="20dp"
         android:layout_marginLeft="20dp"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="我的订单号:"
         android:textSize="15dp"
         app:layout_constraintTop_toTopOf="parent"
         app:layout_constraintLeft_toLeftOf="parent"
         android:id="@+id/dingdan"/>
     <TextView
         android:layout_marginTop="10dp"
         android:id="@+id/wc"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="已完成"
         android:textColor="#8DF118"
         app:layout_constraintRight_toRightOf="parent"
         app:layout_constraintTop_toTopOf="parent"
         android:layout_marginRight="20dp"
         />
     <TextView
         android:layout_marginTop="30dp"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="钢琴一对一陪练课程"
         android:textSize="30dp"
         android:layout_marginLeft="20dp"
         android:textColor="#000"
         app:layout_constraintTop_toBottomOf="@id/dingdan"
         app:layout_constraintLeft_toLeftOf="parent"
         android:id="@+id/gq"
         />
     <TextView
         android:layout_marginTop="40dp"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="下单时间:2020.12.31"
         app:layout_constraintTop_toBottomOf="@id/gq"
         app:layout_constraintLeft_toLeftOf="parent"
         android:layout_marginLeft="20dp"
         android:id="@+id/xdsj"
         />
     <TextView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="500"
         android:textColor="#FF5722"
         android:textSize="30dp"
        android:id="@+id/price"
         app:layout_constraintTop_toBottomOf="@id/wc"
         android:layout_marginTop="30dp"
         android:layout_marginRight="30dp"
         android:paddingTop="50dp"
         app:layout_constraintRight_toRightOf="parent"/>

 </androidx.constraintlayout.widget.ConstraintLayout>

  </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>