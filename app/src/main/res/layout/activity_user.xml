<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/tv_verification_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="验证码登录"
        android:textSize="@dimen/dp_25"
        android:textStyle="bold"
        android:textColor="#0E0E0E"
        android:layout_marginTop="@dimen/dp_75"
        android:layout_marginLeft="@dimen/dp_30"
        />
    <View
        android:id="@+id/vw_vertical_bar"
        android:layout_width="1dp"
        android:layout_height="@dimen/dp_25"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/tv_verification_code"
        android:background="#9A9898"
        android:layout_marginTop="@dimen/dp_80"
        android:layout_marginLeft="@dimen/dp_10"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/vw_vertical_bar"
        android:text="密码登录"
        android:textSize="@dimen/dp_20"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/dp_80"
        android:layout_marginLeft="@dimen/dp_10"
        />
    <ImageView
        android:layout_width="@dimen/dp_18"
        android:layout_height="@dimen/dp_18"
        app:layout_constraintTop_toBottomOf="@+id/tv_verification_code"
        app:layout_constraintLeft_toLeftOf="parent"
        android:src="@mipmap/a1"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginTop="@dimen/dp_12"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tv_verification_code"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="未注册手机号码将直接注册"
        android:textSize="@dimen/dp_15"
        android:layout_marginLeft="@dimen/dp_55"
        android:layout_marginTop="@dimen/dp_10"
        />

    <ImageView
        android:layout_width="@dimen/dp_18"
        android:layout_height="@dimen/dp_18"
        app:layout_constraintTop_toBottomOf="@+id/tv_verification_code"
        app:layout_constraintLeft_toLeftOf="parent"
        android:src="@mipmap/a2"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginTop="@dimen/dp_80"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tv_verification_code"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="+86"
        android:textSize="@dimen/dp_15"
        android:layout_marginLeft="@dimen/dp_55"
        android:layout_marginTop="@dimen/dp_78"
        />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tv_verification_code"
        app:layout_constraintLeft_toLeftOf="parent"
        android:hint="请输入手机号"
        android:textSize="15dp"
        android:textColor="#0E0E0E"
        android:layout_marginLeft="@dimen/dp_90"
        android:layout_marginTop="@dimen/dp_78"
        android:background="@null"
        />
    <View
        android:layout_width="@dimen/dp_340"
        android:layout_height="@dimen/dp_1"
        app:layout_constraintTop_toBottomOf="@+id/tv_verification_code"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="@dimen/dp_110"
        android:background="#9A9898"
        />

    <ImageView
        android:layout_width="@dimen/dp_18"
        android:layout_height="@dimen/dp_18"
        app:layout_constraintTop_toBottomOf="@+id/tv_verification_code"
        app:layout_constraintLeft_toLeftOf="parent"
        android:src="@mipmap/a3"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginTop="@dimen/dp_142"
        />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tv_verification_code"
        app:layout_constraintLeft_toLeftOf="parent"
        android:hint="请输入验证码"
        android:textSize="@dimen/dp_15"
        android:textColor="#0E0E0E"
        android:layout_marginLeft="@dimen/dp_55"
        android:layout_marginTop="@dimen/dp_140"
        android:background="@null"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tv_verification_code"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="获取验证码"
        android:textSize="15dp"
        android:layout_marginLeft="@dimen/dp_260"
        android:layout_marginTop="@dimen/dp_140"
        />
    <View
        android:layout_width="@dimen/dp_340"
        android:layout_height="@dimen/dp_1"
        app:layout_constraintTop_toBottomOf="@+id/tv_verification_code"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="@dimen/dp_170"
        android:background="#9A9898"
        />

    <Button
        android:id="@+id/bnt_login"
        android:layout_width="@dimen/dp_300"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tv_verification_code"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="@dimen/dp_230"
        android:background="@drawable/user_shop"
        android:text="登录"
        android:textSize="@dimen/dp_20"
        android:textColor="#FFFEFE"
        />
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tv_verification_code"
        android:layout_marginTop="@dimen/dp_300"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="@dimen/dp_30"
        />
    <TextView
        android:id="@+id/tv_terms"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tv_verification_code"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="@dimen/dp_70"
        android:text="登录即代表同意《中国移动认证服务条款》和《用户协议》"
        android:layout_marginTop="@dimen/dp_313"
        android:textSize="@dimen/dp_10"
        />

</androidx.constraintlayout.widget.ConstraintLayout>