<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".liuhaolin.wodekengcheng.MeKeCheng">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#ED9E4C"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/mekecheng_con"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="课表"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:id="@+id/mekecheng_text1"
            android:textColor="#fff"
            />
        <com.google.android.material.tabs.TabLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            app:layout_constraintTop_toBottomOf="@id/mekecheng_text1"
            app:tabMode="scrollable"
            android:id="@+id/mekecheng_tab"
            app:tabPaddingStart="12dp"
            app:tabPaddingEnd="8dp"
            app:tabMaxWidth="200dp"
            app:tabMinWidth="20dp"
            app:tabTextColor="#fff"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.viewpager.widget.ViewPager
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/mekecheng_con"
        android:id="@+id/mekecheng_vp"
        />
</androidx.constraintlayout.widget.ConstraintLayout>